<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="socialengine">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialUser</class>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialCommunity</class>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialGroup</class>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialEntity</class>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialEntityType</class>
	    <class>eu.trentorise.smartcampus.social.engine.model.SocialRating</class>
		<properties>
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy" />
		</properties>
	</persistence-unit>
</persistence>
